<h1>ABC Concert Seating Arrangement</h1>
<div class="row">
  <div class="col-md-9">
	<table class="table table-bordered">
		  <thead>
			<tr>
			  <th>a  </th>
			  <th>b  </th>
			  <th>c  </th>
			  <th>d  </th>
			  <th>e  </th>
			  <th>f  </th>
			  <th>g  </th>
			  <th>h  </th>
			  <th>i  </th>
			  <th>j  </th>
			</tr>
		  </thead>
	  <tbody>
		<% @all.each do |x| %>
		  <tr>
			<% x.each do |attr| %>
			  <td><%= x.to_s[attr] %></td>
			<% end %>
		  </tr>
		<% end %>
	  </tbody>
	</table>
  </div>
  
  <div class="col-md-3">
	<h5>Show Available Seats:</h5>
	<button onclick="document.getElementById('id01').style.display='block'" class="w3-button w3-black">Available Seats</button>  
	<br><hr>
	<h5>Single Available Seat:</h5>
	<button onclick="document.getElementById('single').style.display='block'" class="w3-button w3-black">Random Single available seats</button>  

	<br><hr>
	<h5>Double Available Seat:</h5>
	<button onclick="document.getElementById('double').style.display='block'" class="w3-button w3-black">Random Double available seats</button>  	
  </div>
</div>



<br><hr>
<h3>Seating Arrangment in Array</h3>
<p><%= @all %></p>



<%= render "project/modal" %>
          
</body>
</html>
